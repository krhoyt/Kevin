{% from "partials/icon.njk" import icon %}

<header class="site-head" {% if page.url == '/' %} style="background-image: url( '/img/wonder.twins.jpg' )"{% endif %}>
  <div class="container">
    <div class="site-mast">
      <div class="site-mast-left">
        <a href="/" class="site-brand">
          Kevin Hoyt
        </a>
      </div>    
      <div class="site-mast-right">
        <a href="https://twitter.com/krhoyt" class="site-nav-item" target="_blank" rel="noopener noreferrer">
          {{ icon({ id: 'twitter' }) }}
        </a>
        <a class="site-nav-item" href="https://feedly.com/i/subscription/feed/{{ site.url }}/feed.xml" target="_blank" rel="noopener noreferrer">
          {{ icon({ id: 'rss' }) }}
        </a>
      </div>
    </div>
    {% if page.url == '/' %}
      <div class="site-banner">
        <h1 class="site-banner-title">Kevin Hoyt</h1>
        <p class="site-banner-desc">Makes cool shit</p>
      </div>
    {% endif %}

    {% include 'partials/navigation.njk' %}
  </div>
</header>
