<section id="writing">

  <h2>Featured Writing</h2>

  <div>

    {% for post in collections.postsByRating.slice( 0, 6 ) %}
      <article>

        {% if post.data.feature_image %}
          <a aria-label="{{ post.data.title}}" href="{{ post.url }}"><img alt="{{ post.data.title }}" src="{{ post.data.feature_image }}"></a>
        {% endif %}

        <h3><a aria-label="{{ post.data.title}}" href="{{ post.url }}">{{ post.data.title }}</a></h3>

        {% if post.data.description %}
          <p><a aria-label="{{ post.data.title}}" href="{{ post.url }}">{{ post.data.description }}</a></p>
        {% endif %}

        {% if post.data.tags %}
          <aside>
            {% for tag in post.data.tags %}
              <p>{{ tag }}</p>
            {% endfor %}
          </aside>
        {% endif %}

      </article>
    {% endfor %}

  </div>

</section>
